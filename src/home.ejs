        <p class="hero__lead">
          <%= lang.home.areaNote %>
        </p>
        <% } %>
          <% if (lang.home.chips) { %>
            <div class="hero__chips">
              <% lang.home.chips.forEach((chip)=> { %>
                <span class="badge badge--outline">
                  <%= chip %>
                </span>
                <% }) %>
            </div>
            <% } %>
              <div class="hero__actions">
                <a class="button button--primary" href="tel:<%= site.phone %>">
                  <%= lang.home.ctaPrimary %>
                </a>
                <a class="button button--secondary" href="https://wa.me/<%= site.phone.replace(/[^0-9]/g, '') %>" target="_blank"
                  rel="noopener">
                  <img class="button__icon" src="/assets/icons/social/wh.png" alt="" width="24" height="24">
                  <%= lang.ctaMessage || lang.home.ctaSecondary || "WhatsApp" %>
                </a>
                <a class="button button--ghost" href="<%= site.telegram %>" target="_blank" rel="noopener">
                  <img class="button__icon" src="/assets/icons/social/tg.png" alt="" width="24" height="24">
                  Telegram
                </a>
                <% if (site.facebook) { %>
                  <a class="button button--ghost" href="<%= site.facebook %>" target="_blank" rel="noopener">
                    <img class="button__icon" src="/assets/icons/social/fb.png" alt="" width="24" height="24">
                    Facebook
                  </a>
                  <% } %>
              </div>
              <% if (lang.home.heroNote) { %>
                <p class="hero__note">
                  <%= lang.home.heroNote %>
                </p>
                <% } %>
    </div>
    <div class="card card--elevated hero__form">
      <h2 class="card__title">
        <%= lang.home.contact.title %>
      </h2>
      <p class="card__text">
        <%= lang.home.contact.lead %>
      </p>
      <form class="form" action="https://api.web3forms.com/submit" method="POST" autocomplete="off">
        <input type="hidden" name="access_key" value="<%= site.web3formsAccessKey %>">
        <!-- dummy field to discourage Chrome autofill -->
        <!--        <input type="text" name="chrome_off" autocomplete="chrome-off" aria-hidden="true" tabindex="-1"
          role="presentation" aria-label=" "
          style="position:absolute;left:-9999px;opacity:0;height:0;width:0;border:0;padding:0;">-->
        <div class="form__row">
          <label class="form__label" for="name-hero">
            <%= lang.home.contact.form.nameLabel %>
          </label>
          <input autocomplete="off" class="form__input" type="text" id="name-hero" name="name"
            placeholder="<%= lang.home.contact.form.namePlaceholder %>">
        </div>
        <div class="form__row">
          <label class="form__label" for="phone-hero">
            <%= lang.home.contact.form.phoneLabel %>
          </label>
          <div class="form__phone-group">
            <input autocomplete="off" class="form__input form__input--phone" type="number" min="0" id="phone-hero"
              name="phone" placeholder="<%= lang.home.contact.form.phonePlaceholder %>" inputmode="tel" required
              oninvalid="this.setCustomValidity('<%= lang.home.contact.form.phoneRequired %>')"
              oninput="this.setCustomValidity('')">
            <div class="form__contact-methods" role="group" aria-label="Preferred contact methods">
              <span class="form__contact-methods-note">
                <%= lang.home.contact.form.preferredContactLabel %>
              </span>

              <input class="form__contact-method-input" type="checkbox" id="preferred-contact-call"
                name="preferredContact[]" value="call">
              <label class="form__contact-method" for="preferred-contact-call" title="Call">
                <img class="button__icon" src="/assets/icons/social/call.png" alt="Call" width="24" height="24">
              </label>

              <input class="form__contact-method-input" type="checkbox" id="preferred-contact-tg"
                name="preferredContact[]" value="telegram">
              <label class="form__contact-method" for="preferred-contact-tg" title="Telegram">
                <img class="button__icon" src="/assets/icons/social/tg.png" alt="Telegram" width="24" height="24">
              </label>

              <input class="form__contact-method-input" type="checkbox" id="preferred-contact-wh"
                name="preferredContact[]" value="whatsapp">
              <label class="form__contact-method" for="preferred-contact-wh" title="WhatsApp">
                <img class="button__icon" src="/assets/icons/social/wh.png" alt="WhatsApp" width="24" height="24">
              </label>

            </div>
          </div>
        </div>
        <div class="form__row">
          <label class="form__label" for="message-hero">
            <%= lang.home.contact.form.descriptionLabel %>
          </label>
          <textarea class="form__input" id="message-hero" name="message" rows="3"
            placeholder="<%= lang.home.contact.form.descriptionPlaceholder %>" autocomplete="off"
            aria-autocomplete="none"></textarea>
        </div>
        <div class="form__actions">
          <button class="button button--primary" type="submit">
            <%= lang.home.contact.form.submit %>
          </button>
          <a class="button button--ghost" href="tel:<%= site.phone %>">
            <%= lang.home.ctaPrimary %>
          </a>
        </div>
      </form>
    </div>
  </div>
</section>

