<% const contactPage=lang.pages.contacts; %>

  <section class="section section--surface">
    <div class="container">
      <div class="section__header">
        <h1 class="section__title">
          <%= contactPage.heading %>
        </h1>
        <p class="section__lead">
          <%= contactPage.lead %>
        </p>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid--2">
      <% if (contactPage.cards) { %>
        <% contactPage.cards.forEach((card)=> { %>
          <div class="card">
            <h1 class="card__title">
              <%= card.title %>
            </h1>
            <ul class="list">
              <% card.items.forEach((item)=> { %>
                <li class="list__item">
                  <strong>
                    <%= item.label %>:
                  </strong>
                    <% const type = item.type; const waNumber = site.phone.replace(/[^0-9]/g, ''); const value = item.value
                            || ""; if (type === "phone" ) { %>
                        <a href="tel:<%= site.phone %>">
                            <%= site.phone %>
                        </a>
                    <% } else if (type === "telegram" ) { %>
                        <% const href = item.href || site.telegram; %>
                        <a href="<%= href %>" target="_blank" rel="noopener">
                            <%= value || href %>
                        </a>
                    <% } else if (type === "whatsapp" ) { %>
                        <a href="https://wa.me/<%= waNumber %>" target="_blank" rel="noopener">
                            <%= value || site.phone %>
                        </a>
                    <% } else if (type === "facebook" ) { %>
                        <% const href = item.href || site.facebook; %>
                        <a href="<%= href %>" target="_blank" rel="noopener">
                            <%= value || href %>
                        </a>
                    <% } else if (type === "email" ) { %>
                        <% const emailValue = value || site.email; %>
                        <a href="mailto:<%= emailValue %>">
                            <%= emailValue %>
                        </a>
                    <% } else if (item.href) { %>
                        <a href="<%= item.href %>"
                           target="<%= item.href.startsWith('http') ? '_blank' : '_self' %>"
                           rel="<%= item.href.startsWith('http') ? 'noopener' : '' %>">
                            <%= value %>
                        </a>
                    <% } else { %>
                        <span>
                            <%= value %>
                        </span>
                    <% } %>
                </li>
                <% }); %>
            </ul>
            <% if (card.note) { %>
              <p class="card__text">
                <%= card.note %>
              </p>
              <% } %>
          </div>
          <% }); %>
            <% } %>

              <% if (contactPage.cta) { %>
                <div class="card card--elevated">
                  <h2 class="card__title">
                    <%= lang.home.contact.title %>
                  </h2>
                  <p class="card__text">
                    <%= lang.home.contact.lead %>
                  </p>
                  <div class="messenger-row">
                    <a class="button button--secondary" href="<%= site.telegram %>" target="_blank" rel="noopener">
                      <img class="button__icon" src="/assets/icons/social/tg.png" alt="" width="24" height="24">
                      Telegram
                    </a>
                    <a class="button button--ghost" href="https://wa.me/<%= site.phone.replace(/[^0-9]/g, '') %>" target="_blank"
                      rel="noopener">
                      <img class="button__icon" src="/assets/icons/social/wh.png" alt="" width="24" height="24">
                      WhatsApp
                    </a>
                    <% if (site.facebook) { %>
                      <a class="button button--ghost" href="<%= site.facebook %>" target="_blank" rel="noopener">
                        <img class="button__icon" src="/assets/icons/social/fb.png" alt="" width="24"
                          height="24">
                        Facebook
                      </a>
                      <% } %>
                  </div>
                </div>
                <% } %>
    </div>
  </section>
