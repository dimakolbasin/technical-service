<% const contactPage=lang.pages.contacts; %>

  <section class="section section--surface">
    <div class="container">
      <div class="section__header">
        <h1 class="section__title">
          <%= contactPage.heading %>
        </h1>
        <p class="section__lead">
          <%= contactPage.lead %>
        </p>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid--2">
      <% if (contactPage.cards) { %>
        <% contactPage.cards.forEach((card)=> { %>
          <div class="card">
            <h3 class="card__title">
              <%= card.title %>
            </h3>
            <ul class="list">
              <% card.items.forEach((item)=> { %>
                <li class="list__item">
                  <strong>
                    <%= item.label %>:
                  </strong>
                  <% if (item.label.toLowerCase().includes("мессенджеры") ||
                    item.label.toLowerCase().includes("messenger")) { %>
                    <a href="tel:<%= site.phone %>">
                      <%= site.phone %>
                    </a>
                    <% } else if (item.label.toLowerCase().includes("whatsapp")) { %>
                      <a href="https://wa.me/<%= site.phone.replace(/[^0-9]/g, '') %>" target="_blank" rel="noopener">
                        <%= item.value %>
                      </a>
                      <% } else if (item.href) { %>
                        <a href="<%= item.href %>" target="<%= item.href.startsWith('http') ? '_blank' : '_self' %>"
                          rel="<%= item.href.startsWith('http') ? 'noopener' : '' %>">
                          <%= item.value %>
                        </a>
                        <% } else if (item.label.toLowerCase().includes("телефон") ||
                          item.label.toLowerCase().includes("phone")) { %>
                          <a href="tel:<%= site.phone %>">
                            <%= site.phone %>
                          </a>
                          <% } else if (item.label.toLowerCase().includes("email")) { %>
                            <a href="mailto:<%= item.value %>">
                              <%= item.value %>
                            </a>
                            <% } else { %>
                              <span>
                                <%= item.value %>
                              </span>
                              <% } %>
                </li>
                <% }); %>
            </ul>
            <% if (card.note) { %>
              <p class="card__text">
                <%= card.note %>
              </p>
              <% } %>
          </div>
          <% }); %>
            <% } %>

              <% if (contactPage.cta) { %>
                <div class="card card--elevated">
                  <h3 class="card__title">
                    <%= lang.home.contact.title %>
                  </h3>
                  <p class="card__text">
                    <%= lang.home.contact.lead %>
                  </p>
                  <div class="messenger-row">
                    <a class="button button--secondary" href="<%= site.telegram %>" target="_blank" rel="noopener">
                      <img class="button__icon" src="/assets/icons/social/tg.png" alt="">
                      Telegram
                    </a>
                    <a class="button button--ghost" href="https://wa.me/<%= site.phone.replace(/[^0-9]/g, '') %>"
                      target="_blank" rel="noopener">
                      <img class="button__icon" src="/assets/icons/social/wh.png" alt="">
                      WhatsApp
                    </a>
                    <% if (site.facebook) { %>
                      <a class="button button--ghost" href="<%= site.facebook %>" target="_blank" rel="noopener">
                        <img class="button__icon" src="/assets/icons/social/fb.png" alt="">
                        Facebook
                      </a>
                      <% } %>
                  </div>
                </div>
                <% } %>
    </div>
  </section>