<% const servicesPage = lang.pages.services; %>

<section class="section section--surface">
  <div class="container">
    <div class="section__header">
      <h1 class="section__title"><%= servicesPage.heading %></h1>
      <p class="section__lead"><%= servicesPage.lead %></p>
    </div>
  </div>
</section>

<% if (lang.serviceFocus) { %>
  <section class="section">
    <div class="container">
      <div class="section__header">
        <h2 class="section__title"><%= lang.serviceFocus.title %></h2>
        <p class="section__lead"><%= lang.serviceFocus.lead %></p>
      </div>
      <div class="grid grid--3">
        <% lang.serviceFocus.items.forEach((item)=> { %>
          <article class="card">
            <h3 class="card__title"><%= item.title %></h3>
            <% if (item.text) { %>
              <p class="card__text"><%= item.text %></p>
            <% } %>
            <a class="card__link" href="<%= lang.paths[item.key] %>">
              <%= lang.serviceFocus.linkLabel %> — <%= item.title %>
            </a>
          </article>
        <% }) %>
      </div>
    </div>
  </section>
<% } %>

<% if (servicesPage.sections) { %>
  <section class="section">
    <div class="container">
      <div class="grid grid--2">
        <% servicesPage.sections.forEach((block) => { %>
          <div class="card">
            <h3 class="card__title"><%= block.title %></h3>
            <% if (block.lead) { %><p class="card__text"><%= block.lead %></p><% } %>
            <% if (block.items) { %>
              <ul class="list">
                <% block.items.forEach((item) => { %>
                  <li class="list__item">• <span><%= item %></span></li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>
  </section>
<% } %>
