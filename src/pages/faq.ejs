<% const faqPage = lang.pages.faq; %>

<section class="section section--surface">
  <div class="container">
    <div class="section__header">
      <h1 class="section__title"><%= faqPage.heading %></h1>
      <p class="section__lead"><%= faqPage.lead %></p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <% if (faqPage.items) { %>
      <% faqPage.items.forEach((item) => { %>
        <details class="faq">
          <summary class="faq__summary"><%= item.question %></summary>
          <div class="faq__content"><%= item.answer %></div>
        </details>
      <% }); %>
    <% } else { %>
      <div class="card">
        <p class="card__text"><%= faqPage.lead %></p>
      </div>
    <% } %>
  </div>
</section>
